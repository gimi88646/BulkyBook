@{
    
}

@* i displayed the temporary message here because after every crud operation program redirects the user to this page.   *@
<div class="container p-3">
    <div class="row pt-4">
        <div class ="col-6">
            <h2 class="text-primary">Category Controller</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn-primary btn">Create new</a>
        </div>
    </div>
    <br />  
    
    <table class = "table table-bordered table-striped">
        <thead>
            <tr>
                <th>Cateogory Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
           {
            <tr>

                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.displayOrder
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.Id class ="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id class ="btn btn-danger mx-2"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>   
           }
        </tbody>
    </table>
</div>
