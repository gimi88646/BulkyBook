@model CoverType
@{
    ViewData["Title"] = "Create";
}

<form method = "post" class = "border mt-3">
    @*
     passed the object into the view and it automatically set the input default values to object's properties. 
  *@
    <div class = "p-3 mt-4">
        <h2 class = "text-primary">Edit Cover Type</h2>
    
        <div asp-validation-summary=All class="text-danger"></div>
        <div class="mb-3">
            <label class="" asp-for="Name"></label>
            <input asp-for="Name"  class="form-control"  />
            <span asp-validation-for=Name class="text-danger"></span>
            
        </div>
        <button type="submit" class = "btn btn-primary" style ="width:150px">Update</button>
        <a asp-controller="CoverType" asp-action = "Index"  class = "btn btn-secondary"  style ="width:150px">Back to the List</a>
    </div> 
    
</form>




